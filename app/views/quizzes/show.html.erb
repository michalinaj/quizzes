<div class="quiz-show">
  <h2><%= flash[:notice] %></h2>

  <span class="quiz-show__info">
      <h2 class="quiz-card-title__show"><%= @quiz.name %></h2>
      <p class="quiz-card__desc__show">Description: <%= @quiz.description %></p>
      <p class="quiz-card__desc__show">Category: <%= @quiz.category.name %></p>
  </span>
  <span class="quiz-image__show"><%= image_tag("/images/question.svg", :alt => "quiz") %></span>

</div>

<div class="buttons">
  <span class="button"><%= link_to "Take this Quiz", quiz_questions_path(@quiz.id) %></span>
  <span class="button"><%= link_to "Add Questions to this Quiz", new_quiz_question_path(@quiz.id) %></span>
</div>
