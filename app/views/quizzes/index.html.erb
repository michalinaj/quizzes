<div id="app" data-current-user="<%=@current_user.to_json%>">
</div>

<div class="quiz-index-page">

  <div class="categories">
    <% @categories.each do |category| %>
    <li class="category-item"><%= link_to category.name, category_path(category) %></li>
    <% end %>
  </div>

  <h3 class="subtitle">Find and create your own quizzes</h3><br />

    <br />
    <button class="button__add-quiz"><%= link_to "Add New Quiz", new_quiz_path %></button>
    <div class="quiz-mapping">
    <% @quizzes.each do |quiz| %>
    <ul class="quiz-card column-centered small-8">
      <ul class="quiz-card-thumbnail"><%= quiz.quiz_picture %></ul>
      <ul class="quiz-card-title"><%= link_to quiz.name, quiz_path(quiz.id) %></ul>
      <ul class="quiz-card-desc">Description: <%= quiz.description.truncate_words(12)%></ul>
      <ul class="quiz-card-desc">Category: <%= quiz.category.name %></ul>
    </ul>
    <% end %>
    </div>
    <button class="button__add-quiz"><%= link_to "Add New Quiz", new_quiz_path %></<button type="button" name="button"></button>
</div>

<div class="off-canvas-wrap pagination-centered">
  <%= will_paginate @quizzes %>
</div>
