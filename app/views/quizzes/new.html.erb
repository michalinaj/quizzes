<div class="panel index-tile">

  <h3>New Quiz Form</h3>
  <br />
  <% if @quiz.errors.any? %>
  <div id="error_explanation ">
    <h5><%= pluralize(@quiz.errors.count, "error") %>: please fill out all the fields first<h5>
        <% @quiz.errors.full_messages.each do |msg| %>
        <p><%= msg %></p>
        <% end %>
    </div>
    <% end %>
  <br />

  <%= form_for @quiz do |f| %>

  <div class="form__new">
    <div class="field">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>

    <div class="field">
      <%= f.label :description %>
      <div class="textarea"><%= f.text_area :description, size: "42x5" %></div>
    </div>

    <br />
    <p>
    <label for="index_quizzes_on_category_id">Category:</label>
      <%= f.collection_select :category_id, Category.all, :id, :name, prompt: "Select a Category" %>
    </p>

    <br />
    <div class="actions">
      <%= f.submit "Add Questions to this Quiz" %>
    </div>

    <% end %>

  </div>
</div>